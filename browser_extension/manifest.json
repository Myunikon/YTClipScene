{
  "manifest_version": 3,
  "name": "SceneClip Browser Extension",
  "version": "1.0.1",
  "description": "Download videos with SceneClip integration",
  "permissions": [
    "activeTab",
    "contextMenus",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "styles.css"
      ],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "128": "icon.png"
  },
  "action": {
    "default_title": "ClipScene"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "clipscene@clipscene.app",
      "strict_min_version": "109.0"
    }
  }
}